
{{header}}

<div class="newPostCont">
    <h4>Make a new post</h4>
    <form action="/api/posts">
        Title: {{input value=title}} <br>
        Text: {{input value=text}} <br>
        Image: {{file-upload url="/upload" class="newPostButton"}} <br>
        <button type="submit">Submit</button>
    </form>
    
</div>

<div class="timeline">
	{{#each this.model as |post|}}
		<div class="postCont">
			<p>Id: {{post.id}}</p>
			<h1>{{post.title}}</h1>
			
			{{post.image}} 
			<h3>{{post.text}}</h3> <br>
		</div>
	{{/each}}
</div>